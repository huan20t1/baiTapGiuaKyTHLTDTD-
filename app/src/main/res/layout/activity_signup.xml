<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="703dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:background="@drawable/gradiant"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="102dp"
                    android:layout_height="73dp"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="160px"

                    app:srcCompat="@drawable/logog" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="93dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ketnoi" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="87dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="190px"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dt" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:text="Connect to your wallet account"
                android:textColor="#FFFFFF"
                android:textSize="55px" />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="268dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="100px"
            android:layout_marginBottom="40px"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/alef"
            android:gravity="center"
            android:hint="Your name"
            android:inputType="textPersonName"
            android:textColor="#838383" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="268dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40px"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/alef"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textColor="#838383" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="268dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40px"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/alef"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPersonName"
            android:textColor="#838383" />

        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="268dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30px"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/alef"
            android:gravity="center"
            android:hint="Confirm Password"
            android:inputType="textPersonName"
            android:textColor="#838383" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="268dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:text="Use 6 characters with a mix of letters, numbers and symbols." />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30px"
            android:text="Term of Use and Privacy Policy" />

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btsignup"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#245CBC"
                android:fontFamily="@font/advent_pro_light"
                android:text="SIGN UP" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="46dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="or" />

            <Button
                android:id="@+id/btclose"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:fontFamily="@font/advent_pro_light"
                android:text="CLOSE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="Already signed up?"
                android:textSize="45px" />

            <TextView
                android:id="@+id/txtlogin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Login"
                android:textColor="#008EFF"
                android:textSize="45px" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>