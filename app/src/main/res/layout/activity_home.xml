<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="189dp"
            android:background="@drawable/gradiant"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="61dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/menu" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="300px"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="HOME"
                    android:textColor="#FFFFFF"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="66dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|right"
                    app:srcCompat="@drawable/ic_action_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="99dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="90px"
                    android:layout_marginTop="60px"
                    android:src="@drawable/sssss" />

                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="87dp"
                    android:layout_marginTop="130px"
                    android:layout_marginRight="150px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:fontFamily="@font/alata"
                        android:text="BALANCE"
                        android:textColor="#3DADDA"
                        android:textSize="40px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="$3,125.98"
                        android:textColor="#FFFFFF"
                        android:textSize="70px"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="438dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="80px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="131dp"
                    android:layout_height="174dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgprofile"
                        android:layout_width="84dp"
                        android:layout_height="89dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        app:srcCompat="@drawable/profile" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/alata"
                        android:text="Profile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgpayment"
                        android:layout_width="80dp"
                        android:layout_height="89dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/payment" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="Payment" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imghistory"
                        android:layout_width="82dp"
                        android:layout_height="89dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="50px"
                        app:srcCompat="@drawable/history" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="50px"
                        android:fontFamily="@font/alata"
                        android:text="History" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="131dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgexchange"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        app:srcCompat="@drawable/trasaction" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/alata"
                        android:text="Exchange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="142dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgcard"
                        android:layout_width="98dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/creditcard" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="Credit card" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgtransaction"
                        android:layout_width="78dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="50px"
                        app:srcCompat="@drawable/exchange" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="50px"
                        android:fontFamily="@font/alata"
                        android:text="Transaction" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="132dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgfriend"
                        android:layout_width="82dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        app:srcCompat="@drawable/friend" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50px"
                        android:fontFamily="@font/alata"
                        android:text="Friend" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="139dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgaccount"
                        android:layout_width="82dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/account" />

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="Account" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgbill"
                        android:layout_width="82dp"
                        android:layout_height="79dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="50px"
                        app:srcCompat="@drawable/bill" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="50px"
                        android:fontFamily="@font/alata"
                        android:text="Other bill" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btsignout"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="SIGN OUT"
            android:layout_marginTop="50px"
            android:backgroundTint="#245CBC"
            android:fontFamily="@font/advent_pro_light"
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>